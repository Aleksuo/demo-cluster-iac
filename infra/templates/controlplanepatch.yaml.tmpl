machine:
  network:
    interfaces:
      - deviceSelector:
          physical: true
        dhcp: true
        # All traffic will be sent to hetzner router which will be redirected to the gateway
        routes:
          - network: 0.0.0.0/0
            gateway: 172.20.0.1

  kubelet:
    nodeIP:
      validSubnets:
        - ${subnet}
    extraArgs:
      rotate-server-certificates: true

  certSANs:
    - ${loadbalancerip}

  time:
    servers:
      - ntp1.hetzner.de
      - ntp2.hetzner.com
      - ntp3.hetzner.net
      - 0.de.pool.ntp.org
      - 1.de.pool.ntp.org
      - time.cloudflare.com

cluster:
  network:
    cni:
      name: none
    podSubnets:
      - ${pod_subnet_cidr}
    serviceSubnets:
      - ${service_subnet_cidr}
  proxy:
    disabled: true